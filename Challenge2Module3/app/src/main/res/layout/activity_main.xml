<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/sixteen_dp"
        android:paddingLeft="@dimen/sixteen_dp"
        android:paddingRight="@dimen/sixteen_dp">


        <RelativeLayout
            android:id="@+id/second_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <View
                android:layout_alignParentLeft="true"
                android:id="@+id/first_square"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="match_parent"
                android:background="@color/first_color" />

            <View
                android:id="@+id/second_square"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/third_square"
                android:background="@color/second_color" />

            <View
                android:id="@+id/third_square"
                android:layout_toLeftOf="@id/fourth_square"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:background="@color/third_color"/>

            <View
                android:layout_alignParentRight="true"
                android:id="@+id/fourth_square"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="match_parent"
                android:background="@color/fourth_color" />
        </RelativeLayout>

        <TextView
            android:id="@+id/first_text_view"
            android:layout_below="@id/second_relative_layout"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_from_text_view" />

        <TextView
            android:id="@+id/second_text_view"
            android:layout_below="@id/first_text_view"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_from_text_view" />

        <TextView
            android:id="@+id/third_text_view"
            android:layout_below="@id/second_text_view"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_from_text_view" />

        <TextView
            android:id="@+id/fourth_text_view"
            android:layout_below="@id/third_text_view"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_from_text_view" />

        <TextView
            android:id="@+id/fifth_text_view"
            android:layout_below="@id/fourth_text_view"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_from_text_view" />

    </LinearLayout>


</ScrollView>